[module/bspwm]
type = internal/bspwm

label-focused = 
label-focused-font = 3
label-focused-foreground = ${colors.fg-alt}
label-focused-padding = 1

label-occupied = 
label-occupied-font = 3
label-occupied-foreground = ${colors.fg-alt}
label-occupied-padding = 1

label-urgent = 
label-urgent-font = 3
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1


label-empty = 
label-empty-font = 3
label-empty-foreground = #9a9a9a
label-empty-padding = 1

[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = ""
format-prefix-font = 4
format-prefix-padding = 2
format = <label>
format-background = #2e3440
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh
scroll-up = playerctl previous 
click-left = playerctl --player=spotify play-pause
scroll-down = playerctl --player=spotify next 
click-right = wmctrl -a spotify


[module/date]
type = internal/date
interval = 2

time = %H:%M
time-alt = %d:%m:%y

label = %time%
label-padding-right = 3
label-padding-left = 0

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 2

format-volume = <label-volume>
format-volume-padding = 2
format-volume-prefix = ""
label-volume = %percentage%%
label-volume-padding = 1

format-muted = <label-muted>
format-muted-padding = 3
label-muted = ""

click-right = pavucontrol&

